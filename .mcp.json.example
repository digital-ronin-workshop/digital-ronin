{
  "mcpServers": {
    "notion": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/claude-mcp-server-notion"],
      "env": {
        "NOTION_API_KEY": "secret_YOUR_NOTION_TOKEN_HERE"
      }
    },
    "perplexity": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/claude-mcp-server-perplexity"],
      "env": {
        "PERPLEXITY_API_KEY": "pplx-YOUR_PERPLEXITY_KEY_HERE"
      }
    }
  }
}
